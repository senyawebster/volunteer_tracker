<div class="card" class="centerMe">
  <h2><u>Welcome to the Volunteer Tracker</u></h2>
  <p>Where you can create projects and assign them volunteers!</p>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <h4>New Project:</h4>
      <form action="/new_project" method="post" class="form-control">
        <label for="title">Project Title</label>
        <input type="text" name="title" class="form-control">
        <br>
        <button type="submit" class="button btn-success form-control">Create New Project</button>
      </form>
    </div>
    <div class="card">
      <h3>Active Projects:</h3>
      <br>
      <ul>
        <% @projects.each do |project| %>
        <li><a href="/project/<%= project.id()%>"><%= project.title() %></a> </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col col-sm-6">
    <div class="card">
      <h3>Current Volunteers:</h3>
      <br>
      <% if @volunteers.any? %>
        <ul>
          <% @volunteers.each do |volunteer| %>
          <li><%= volunteer.name() %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no volunteers yet</p>
      <% end %>
    </div>
  </div>


</div>
