<div class="jumbotron" class="centerMe">
  <h2><b><%= @project.title() %></b></h2>

  <div class="row">
    <div class="col col-md-3">
        <a href="/"><button type="button" class="btn btn-success">Home</button></a>
      </div>


      <div class="col col-md-6">
        <form action="/project/<%= @project.id() %>" method="post">
          <input type="hidden" name="_method" value="patch">
          <button type="submit" class="btn btn-warning">Rename</button>
          <input type="text" name="rename">
        </form>
      </div>


      <div class="col col-md-3">
        <form class="" action="/project/<%= @project.id() %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
</div>

<!-- <div class="card"> -->
  <!-- <div class="row"> -->
    <div class="row">
      <div class="card">
        <h4>New Volunteer:</h4>
        <form action="/new_volunteer/<%= @project.id %>" method="post" class="form-control">
          <input type="hidden" name="project_id" value="<%= @project.id %>">
          <label for="name">Volunteer Name</label>
          <input type="text" name="name" class="form-control">
          <!-- <label for="project_id">Volunteer's Project</label> -->
          <br>
          <button type="submit" class="button btn-success form-control">Add New Volunteer</button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="card">
        <h3>Current Volunteers:</h3>
        <br>
        <% if @volunteers.any? %>
          <ul>
            <% @volunteers.each do |volunteer| %>
            <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name() %></a> </li>
            <% end %>
          </ul>
        <% else %>
          <p>There are no volunteers yet</p>
        <% end %>
      </div>
    </div>
